doctype html
html.no-js(lang="en")
  head
    include pug/head.pug

  body
    +ie('if IE')
      .browsehappy
        p
          | You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/" target="_blank">upgrade your browser</a> to improve your experience

    .b-page__container

      .b-page__header
        .b-header__logo
          img(src="dist/img/logo.png")
        .b-header__line
          p L'acqua da bere buona dal rubinetto di casa

      .b-page__content
        .b-content__background
          .b-content__background--water
        .b-content__login
          .b-login__form
            .b-form__input-wrap
              span Codice Utente:
              input.b-form__text
            .b-form__input-wrap
              span Password:
              input.b-form__text
            button.b-form__submit Accedi





    // The +ie and +ieSpecial functions come from utils.pug if you wanna check 'em out
    +ie('if lt IE 9')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-1.11.2.min.js"><\/script>')

    +ieSpecial('if gt IE')
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script window.jQuery || document.write('<script src="dist/js/vendor/jquery-2.1.3.min.js"><\/script>')

    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")

    // The actual JS files
    script(src="dist/js/plugins.js")
    script(src="dist/js/script.js")
